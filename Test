-- Auto Hack PC Script for Flee the Facility
-- Final Version - Anti-Beast Fix + Exit Debug

local player = game.Players.LocalPlayer
local Players = game:GetService("Players")
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
local rootPart = character:WaitForChild("HumanoidRootPart")
local Replicated = game:GetService("ReplicatedStorage")

-- Settings
local scriptEnabled = false
local hackExtraPC = false
local hackDelay = 5
local waitBeforeHack = 1
local currentPC = nil
local isHacking = false
local hackedPCs = {}
local beast = nil
local foundBeast = false
local skipCurrentPC = false
local hidePlatform = nil
local statusLabel = nil -- Label hi·ªÉn th·ªã status
local function canGoExit()
    local gui = player:FindFirstChild("PlayerGui")
    if not gui then return false end
    local screen = gui:FindFirstChild("ScreenGui")
    if not screen then return false end
    local info = screen:FindFirstChild("GameInfoFrame")
    if not info then return false end
    local statusBox = info:FindFirstChild("GameStatusBox")
    if not statusBox or not statusBox:IsA("TextLabel") then return false end
    local txt = statusBox.Text:upper()
    if txt:find("FIND AN EXIT") then
        return true
    end
    return false
end


-- H√†m log
local function log(message)
    print("[AUTO HACK] " .. tostring(message))
end

-- H√†m c·∫≠p nh·∫≠t status
local function updateStatus(status)
    if statusLabel then
        statusLabel.Text = "Status: " .. tostring(status)
    end
    log("üìä STATUS: " .. tostring(status))
end

-- H√†m ki·ªÉm tra player c√≥ ph·∫£i Beast kh√¥ng
local function isBeast(plr)
    if not plr then return false end
    local s = plr:FindFirstChild("TempPlayerStatsModule")
    return s and s:FindFirstChild("IsBeast") and s.IsBeast.Value
end

-- H√†m t√¨m Beast
local function findBeast()
    task.spawn(function()
        local runningScan = false
        if runningScan then return end
        runningScan = true
        
        while task.wait(0.05) do
            if foundBeast then
                if not beast or not Players:FindFirstChild(beast.Name) or not isBeast(beast) then
                    beast, foundBeast = nil, false
                    log("‚ö†Ô∏è Beast ƒë√£ m·∫•t!")
                end
            end
            
            if not foundBeast then
                for _, p in ipairs(Players:GetPlayers()) do
                    if isBeast(p) then
                        beast, foundBeast = p, true
                        log("üëπ PH√ÅT HI·ªÜN BEAST: " .. beast.Name)
                        break
                    end
                end
            end
        end
    end)
end

-- H√†m ki·ªÉm tra Beast c√≥ g·∫ßn kh√¥ng (20 studs)
local function isBeastNearby()
    if not foundBeast or not beast or not beast.Character then return false end
    
    local beastRoot = beast.Character:FindFirstChild("HumanoidRootPart")
    if not beastRoot or not rootPart then return false end
    
    local distance = (rootPart.Position - beastRoot.Position).Magnitude
    return distance <= 25
end

-- H√†m t·∫°o platform ·∫©n n√°u
local function createHidePlatform()
    if hidePlatform then
        pcall(function() hidePlatform:Destroy() end)
    end
    
    local platform = Instance.new("Part")
    platform.Size = Vector3.new(10, 1, 10)
    platform.Position = Vector3.new(500, 1000, 500)
    platform.Anchored = true
    platform.Transparency = 1
    platform.CanCollide = true
    platform.Name = "HidePlatform"
    platform.Parent = workspace
    
    hidePlatform = platform
    return platform
end

-- H√†m tr·ªën Beast (M·ªöI - th√¥ng minh h∆°n)
local function escapeBeast()
    updateStatus("üö® BEAST G·∫¶N! An to√†n tr∆∞·ªõc ti√™n...")
    log("üö® Beast g·∫ßn! TP l√™n cao tr√°nh b·ªã b·∫Øt...")

    -- T·∫°o platform n·∫øu ch∆∞a c√≥
    if not hidePlatform then
        hidePlatform = Instance.new("Part")
        hidePlatform.Size = Vector3.new(20, 1, 20)
        hidePlatform.Anchored = true
        hidePlatform.CanCollide = true
        hidePlatform.Material = Enum.Material.SmoothPlastic
        hidePlatform.Color = Color3.fromRGB(0,0,0)
        hidePlatform.Name = "AntiCheatPlatform"
        hidePlatform.Position = Vector3.new(50, 69, 50)
        hidePlatform.Parent = workspace
    end

    -- TP l√™n platform
    rootPart.CFrame = CFrame.new(50, 70, 50)
    task.wait(0.5)

    -- Ch·ªù an to√†n 5s
    for i = 5,1,-1 do
        if not scriptEnabled then break end
        updateStatus("‚è≥ Ch·ªù 5s an to√†n v·ªõi Beast ("..i.."s)")
        log("‚è≥ Ch·ªù "..i.."s...")
        task.wait(1)
    end

    updateStatus("‚úì An to√†n! T√¨m PC kh√°c hack ti·∫øp")
    log("‚úì ƒê√£ ch·ªù 5s sau khi Beast g·∫ßn, ƒëi t√¨m PC kh√°c...")

    -- T√¨m PC kh√°c
    local nearestPC = nil
    local minDistance = math.huge

    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") and obj.Name:match("ComputerTrigger") then
            local pc = obj.Parent
            if pc and not hackedPCs[pc] then
                local isDone = false
                for _, child in pairs(pc:GetDescendants()) do
                    if (child.Name == "ActionProgress" or child.Name == "Value") and 
                       (child:IsA("IntValue") or child:IsA("NumberValue")) then
                        if child.Value >= 1 then
                            isDone = true
                            break
                        end
                    end
                end
                if not isDone then
                    local distance = (rootPart.Position - obj.Position).Magnitude
                    if distance < minDistance then
                        minDistance = distance
                        nearestPC = obj
                    end
                end
            end
        end
    end

    -- N·∫øu t√¨m th·∫•y PC ‚Üí TP qua PC ƒë√≥
    if nearestPC then
        updateStatus("‚Üí TP qua PC kh√°c hack ti·∫øp")
        log("‚Üí T√¨m th·∫•y PC kh√°c! TP ƒë·ªÉ hack ti·∫øp...")
        rootPart.CFrame = nearestPC.CFrame + Vector3.new(0, 3, 0)
        skipCurrentPC = true
        task.wait(0.5)
        return
    end

    updateStatus("‚ö†Ô∏è Kh√¥ng c√≤n PC, ti·∫øp t·ª•c ch·ªù Beast")
    log("‚ö†Ô∏è Kh√¥ng c√≤n PC, gi·ªØ v·ªã tr√≠ ·∫©n n·∫•p...")

    skipCurrentPC = true
end

-- Auto interact
spawn(function()
    local playerGui = player:WaitForChild("PlayerGui")
    local screenGui = playerGui:WaitForChild("ScreenGui")
    local actionBox = screenGui:WaitForChild("ActionBox")
    
    actionBox:GetPropertyChangedSignal("Visible"):Connect(function()
        if scriptEnabled and actionBox.Visible then
            if isHacking and currentPC then
                log("üîß Auto interact PC!")
                game.ReplicatedStorage.RemoteEvent:FireServer("Input", "Action", true)
            end
        end
    end)
    
    log("‚úì Auto interact loaded")
end)

-- H√†m ch·ªù game active
local function waitForGameActive()
    updateStatus("‚è≥ Ch·ªù game active...")
    log("ƒêang ch·ªù game active...")
    local gameActive = Replicated:WaitForChild("IsGameActive", 10)
    
    if gameActive and gameActive:IsA("BoolValue") then
        repeat 
            task.wait(0.5) 
        until gameActive.Value == true
        
        updateStatus("‚úì Game active!")
        log("‚úì Game ƒë√£ active!")
        return true
    else
        updateStatus("‚úó Kh√¥ng t√¨m th·∫•y IsGameActive")
        log("‚úó Kh√¥ng t√¨m th·∫•y IsGameActive")
        return false
    end
end

-- H√†m check "Find an Exit"
local function isFindExitPhase()
    local gameStatus = Replicated:FindFirstChild("GameStatus")
    if gameStatus and gameStatus:IsA("StringValue") then
        local isExit = gameStatus.Value:upper():find("FIND AN EXIT") ~= nil
        if isExit then
            log("üîç [DEBUG] GameStatus = 'FIND AN EXIT' ‚úì")
        end
        return isExit
    end
    log("‚ö†Ô∏è [DEBUG] Kh√¥ng t√¨m th·∫•y GameStatus")
    return false
end

-- H√†m t√¨m Exit (DEBUG DETAIL)
local function findExit()
    updateStatus("üîç ƒêang t√¨m Exit...")
    log("üîç [DEBUG] === B·∫ÆT ƒê·∫¶U T√åM EXIT ===")
    
    local foundObjects = 0
    for _, obj in pairs(workspace:GetDescendants()) do
        local name = obj.Name:lower()
        
        if (name:find("exit") or name:find("door") or name:find("escape") or 
            name:find("freeze") or name:find("pod")) then
            foundObjects = foundObjects + 1
            log("üîç [DEBUG] T√¨m th·∫•y object: " .. obj.Name .. " (" .. obj.ClassName .. ")")
            
            if obj:IsA("Model") then
                log("üîç [DEBUG] ‚Üí ƒê√¢y l√† Model, t√¨m trigger...")
                
                -- T√¨m trigger
                local trigger = obj:FindFirstChild("Trigger") or 
                               obj:FindFirstChild("Button") or
                               obj:FindFirstChild("Interact") or
                               obj:FindFirstChildWhichIsA("BasePart")
                
                if trigger and trigger:IsA("BasePart") then
                    log("üîç [DEBUG] ‚Üí ‚úì T√¨m th·∫•y trigger: " .. trigger.Name)
                    log("üîç [DEBUG] ‚Üí Position: " .. tostring(trigger.Position))
                    updateStatus("‚úì T√¨m th·∫•y Exit!")
                    log("‚úì CH·ªåN EXIT: " .. obj.Name)
                    
                    return {
                        exit = obj,
                        trigger = trigger,
                        position = trigger.Position
                    }
                else
                    log("üîç [DEBUG] ‚Üí ‚úó Kh√¥ng t√¨m th·∫•y trigger trong Model n√†y")
                end
            end
        end
    end
    
    log("üîç [DEBUG] T·ªïng " .. foundObjects .. " object li√™n quan t√¨m th·∫•y")
    updateStatus("‚úó Kh√¥ng t√¨m th·∫•y Exit")
    log("‚úó KH√îNG T√åM TH·∫§Y EXIT H·ª¢P L·ªÜ!")
    return nil
end

-- H√†m m·ªü Exit (DEBUG)
local function openExit(exitData)
    if not exitData or not exitData.trigger then 
        updateStatus("‚ùå exitData = nil!")
        log("‚ùå [DEBUG] exitData ho·∫∑c trigger = nil!")
        return false 
    end
    
    updateStatus("üö™ ƒêang m·ªü Exit...")
    log("=== M·ªû C·ª¨A EXIT ===")
    log("üîç [DEBUG] Exit: " .. exitData.exit.Name)
    log("üîç [DEBUG] Trigger: " .. exitData.trigger.Name)
    log("üîç [DEBUG] Position: " .. tostring(exitData.trigger.Position))
    
    -- TP ƒë·∫øn c·ª≠a
    updateStatus("‚Üí TP ƒë·∫øn Exit...")
    log("Teleporting to exit...")
    local tpSuccess = pcall(function()
        rootPart.CFrame = exitData.trigger.CFrame + Vector3.new(0, 3, 0)
    end)
    
    if not tpSuccess then
        updateStatus("‚ùå TP th·∫•t b·∫°i!")
        log("‚ùå [DEBUG] Teleport th·∫•t b·∫°i!")
        return false
    end
    
    log("‚úì [DEBUG] TP th√†nh c√¥ng!")
    task.wait(0.5)
    
    -- K√≠ch ho·∫°t m·ªü c·ª≠a
    updateStatus("‚Üí M·ªü c·ª≠a...")
    log("ƒêang m·ªü c·ª≠a...")
    local openStartTime = tick()
    local maxOpenTime = 30
    
    while scriptEnabled and (tick() - openStartTime < maxOpenTime) do
        -- Fire remote
        pcall(function()
            game.ReplicatedStorage.RemoteEvent:FireServer("Input", "Action", true)
        end)
        
        -- Touch trigger
        pcall(function()
            firetouchinterest(exitData.trigger, rootPart, 0)
            task.wait(0.05)
            firetouchinterest(exitData.trigger, rootPart, 1)
        end)
        
        -- Check progress
        local actionProgress = player:FindFirstChild("TempPlayerStatsModule")
        if actionProgress then
            local progress = actionProgress:FindFirstChild("ActionProgress")
            if progress and progress:IsA("NumberValue") then
                local percent = math.floor(progress.Value * 100)
                if percent % 20 == 0 then
                    updateStatus("‚Üí M·ªü c·ª≠a: " .. percent .. "%")
                    log("Ti·∫øn ƒë·ªô: " .. percent .. "%")
                end
                
                if progress.Value >= 0.95 then
                    updateStatus("‚úì C·ª≠a ƒë√£ m·ªü!")
                    log("‚úì C·ª≠a ƒë√£ m·ªü!")
                    task.wait(0.5)
                    return true
                end
            end
        end
        
        task.wait(0.3)
    end
    
    updateStatus("‚è±Ô∏è Timeout m·ªü c·ª≠a")
    log("‚è±Ô∏è Timeout m·ªü c·ª≠a")
    return true
end

-- H√†m tho√°t (DEBUG)
local function escapeExit(exitData)
    if not exitData or not exitData.trigger then 
        updateStatus("‚ùå Kh√¥ng th·ªÉ escape!")
        log("‚ùå [DEBUG] Kh√¥ng th·ªÉ escape, exitData = nil!")
        return false 
    end
    
    updateStatus("üèÉ ƒêang tho√°t...")
    log("=== THO√ÅT QUA C·ª¨A ===")
    
    local exitPos = exitData.trigger.Position
    local direction = (exitData.trigger.CFrame.LookVector * -5)
    local escapePos = exitPos + direction
    
    log("üîç [DEBUG] Exit position: " .. tostring(exitPos))
    log("üîç [DEBUG] Escape position: " .. tostring(escapePos))
    log("TP v·ªÅ tr∆∞·ªõc c·ª≠a 5 studs...")
    
    local tpSuccess = pcall(function()
        rootPart.CFrame = CFrame.new(escapePos.X, exitPos.Y, escapePos.Z)
    end)
    
    if not tpSuccess then
        updateStatus("‚ùå TP escape th·∫•t b·∫°i!")
        log("‚ùå [DEBUG] TP escape th·∫•t b·∫°i!")
        return false
    end
    
    updateStatus("‚úÖ THO√ÅT TH√ÄNH C√îNG!")
    log("‚úì [DEBUG] TP escape th√†nh c√¥ng!")
    task.wait(1)
    
    log("‚úÖ THO√ÅT TH√ÄNH C√îNG!")
    return true
end

-- H√†m auto Exit
local function autoExit()
    if not scriptEnabled then return end
    
    log("üö™ B·∫ÆT ƒê·∫¶U AUTO EXIT!")
    log("üîç [DEBUG] scriptEnabled = " .. tostring(scriptEnabled))
    
    -- T√¨m Exit
    local exitData = findExit()
    if not exitData then
        log("‚ö†Ô∏è Kh√¥ng t√¨m th·∫•y Exit!")
        return
    end
    
    log("üîç [DEBUG] exitData found: " .. exitData.exit.Name)
    
    -- M·ªü c·ª≠a
    local openSuccess = openExit(exitData)
    if not openSuccess then
        log("‚ö†Ô∏è Kh√¥ng m·ªü ƒë∆∞·ª£c c·ª≠a!")
        return
    end
    
    log("üîç [DEBUG] C·ª≠a ƒë√£ m·ªü, chu·∫©n b·ªã escape...")
    
    -- Tho√°t
    escapeExit(exitData)
    
    log("‚úÖ HO√ÄN T·∫§T AUTO EXIT!")
end

-- H√†m check PC h·ª£p l·ªá
local function isValidPC(pc)
    if not pc then return false end

    local name = pc.Name:lower()
    if name:find("prefab") or name:find("dev") or name:find("test") then
        return false
    end

    local hasTrigger = false
    for _, child in pairs(pc:GetChildren()) do
        if child:IsA("BasePart") and child.Name:match("ComputerTrigger") then
            hasTrigger = true
            break
        end
    end
    
    return hasTrigger
end

-- H√†m t√¨m PC
local function findAllPCTriggers()
    local pcGroups = {}
    local allPCs = {}

    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") and 
           (obj.Name == "ComputerTrigger1" or 
            obj.Name == "ComputerTrigger2" or 
            obj.Name == "ComputerTrigger3") then
      
            local computer = obj.Parent
            if computer then
                if not pcGroups[computer] then
                    pcGroups[computer] = { computer = computer, triggers = {} }
                end
                table.insert(pcGroups[computer].triggers, obj)
            end
        end
    end

    for comp, data in pairs(pcGroups) do
        if isValidPC(comp) and not hackedPCs[comp] then
            table.insert(allPCs, {
                trigger = data.triggers[1],
                computer = comp,
                id = comp
            })
        end
    end

    return allPCs
end

-- H√†m check PC done
local function isPCDone(pcData)
    if not pcData or not pcData.computer then return false end
    
    for _, child in pairs(pcData.computer:GetDescendants()) do
        if (child.Name == "ActionProgress" or child.Name == "Value") and 
           (child:IsA("IntValue") or child:IsA("NumberValue")) then
            if child.Value >= 1 then
                return true
            end
        end
    end
    
    return false
end

-- H√†m check PC kh·∫£ d·ª•ng
local function isPCAvailable(pcData)
    if not pcData or not pcData.computer then return false end
    
    if isPCDone(pcData) then
        return false
    end
    
    for _, child in pairs(pcData.computer:GetDescendants()) do
        if child.Name == "ActionProgress" and 
           (child:IsA("IntValue") or child:IsA("NumberValue")) then
            if child.Value > 0 and child.Value < 1 then
                log("  ‚ö†Ô∏è PC ƒëang ƒë∆∞·ª£c hack (progress: " .. math.floor(child.Value * 100) .. "%)")
                return false
            end
        end
    end
    
    return true
end

-- Track progress
local function trackPCProgress(pcData)
    if not pcData or not pcData.computer then return end
    
    for _, child in pairs(pcData.computer:GetDescendants()) do
        if child.Name == "ActionProgress" or child.Name == "Value" then
            if child:IsA("IntValue") or child:IsA("NumberValue") then
                child:GetPropertyChangedSignal("Value"):Connect(function()
                    local progress = math.floor(child.Value * 100)
                    log("Progress: " .. progress .. "%")
                    
                    if child.Value >= 1 then
                        log("‚úÖ PC DONE!")
                    end
                end)
            end
        end
    end
end

-- Teleport
local function teleportToTrigger(triggerPart)
    if not triggerPart or not rootPart then return false end
    
    log("Teleporting to: " .. triggerPart.Name)
    rootPart.CFrame = triggerPart.CFrame + Vector3.new(0, 3, 0)
    task.wait(0.5)
    return true
end

-- K√≠ch ho·∫°t hack
local function activateHack(pcData)
    if not pcData or not pcData.trigger then return false end
    
    pcall(function()
        game.ReplicatedStorage.RemoteEvent:FireServer("Input", "Action", true)
    end)
    
    pcall(function()
        firetouchinterest(pcData.trigger, rootPart, 0)
        task.wait(0.05)
        firetouchinterest(pcData.trigger, rootPart, 1)
    end)
    
    return true
end

local function getTriggersOfComputer(computer)
    local triggers = {}
    if not computer then return triggers end
    for _, obj in ipairs(computer:GetDescendants()) do
        if obj:IsA("BasePart") and tostring(obj.Name):lower():match("computertrigger") then
            table.insert(triggers, obj)
        end
    end
    if #triggers == 0 then
        for _, obj in ipairs(computer:GetChildren()) do
            if obj:IsA("BasePart") then
                table.insert(triggers, obj)
            else
                for _, g in ipairs(obj:GetChildren()) do
                    if g:IsA("BasePart") and tostring(g.Name):lower():match("trigger") then
                        table.insert(triggers, g)
                    end
                end
            end
        end
    end
    return triggers
end

local function findAvailableTriggerForComputer(pcComputer)
    if not pcComputer then return nil end
    local triggers = getTriggersOfComputer(pcComputer)
    if #triggers == 0 then return nil end
    table.sort(triggers, function(a,b)
        if not a or not b then return false end
        local da = (a.Position - rootPart.Position).Magnitude
        local db = (b.Position - rootPart.Position).Magnitude
        return da < db
    end)
    local playerGui = player:FindFirstChild("PlayerGui")
    local actionBox = nil
    if playerGui then
        local screenGui = playerGui:FindFirstChild("ScreenGui")
        if screenGui then
            actionBox = screenGui:FindFirstChild("ActionBox")
        end
    end
    for _, trig in ipairs(triggers) do
        if trig and trig:IsA("BasePart") then
            pcall(function() rootPart.CFrame = trig.CFrame + Vector3.new(0,3,0) end)
            task.wait(0.15)
            local occupied = false
            for _, child in ipairs(pcComputer:GetDescendants()) do
                if (child.Name == "ActionProgress" or child.Name == "Value")
                and (child:IsA("IntValue") or child:IsA("NumberValue")) then
                    if child.Value > 0 and child.Value < 1 then
                        occupied = true
                        break
                    end
                end
            end
            if actionBox and actionBox.Visible and not occupied then
                return trig
            end
        end
    end
    return nil
end

-- Hack PC
local function hackPC(pcData)
    if not pcData or isHacking then return end
    
    if isPCDone(pcData) then
        updateStatus("‚è≠Ô∏è PC done, skip")
        log("‚è≠Ô∏è PC ƒë√£ done, skip!")
        hackedPCs[pcData.id] = true
        return
    end
    
    if not isPCAvailable(pcData) then
        updateStatus("‚è≠Ô∏è PC kh√¥ng kh·∫£ d·ª•ng")
        log("‚è≠Ô∏è PC kh√¥ng kh·∫£ d·ª•ng, skip!")
        return
    end
    
    isHacking = true
    currentPC = pcData
    skipCurrentPC = false

task.spawn(function()
    local lastValue = -1

    while scriptEnabled and isHacking and currentPC == pcData do
        -- T√¨m ActionProgress c·ªßa PC hi·ªán t·∫°i
        local progressValue = nil

        for _, child in pairs(pcData.computer:GetDescendants()) do
            if (child.Name == "ActionProgress" or child.Name == "Value")
                and (child:IsA("IntValue") or child:IsA("NumberValue")) then
                progressValue = child
                break
            end
        end

        if progressValue then
            local v = progressValue.Value

            -- Debug
            -- print("Progress:", v)

            -- N·∫øu PC DONE ‚Üí nh·∫£y l√™n tr·ªùi
            if v >= 1 then
                print("üî• PC ho√†n th√†nh (ph√°t hi·ªán realtime 0.1s)")

                hackedPCs[pcData.id] = true
                isHacking = false

                -- Teleport l√™n tr·ªùi 5s
                rootPart.CFrame = CFrame.new(50,70,50)
                task.wait(5)

                local nearest = nil
                local nearestDist = math.huge

                for _, obj in ipairs(workspace:GetDescendants()) do
                    if obj:IsA("BasePart") and obj.Name:match("ComputerTrigger") then
                        local comp = obj.Parent
                        if comp then
                            -- Check comp ch∆∞a done
                            local done = false
                            for _, c in ipairs(comp:GetDescendants()) do
                                if (c.Name == "ActionProgress" or c.Name == "Value")
                                  and (c:IsA("IntValue") or c:IsA("NumberValue")) then
                                    if c.Value >= 1 then
                                        done = true
                                        break
                                    end
                                end
                            end

                            if not done then
                                local dist = (obj.Position - rootPart.Position).Magnitude
                                if dist < nearestDist then
                                    nearestDist = dist
                                    nearest = obj
                                end
                            end
                        end
                    end
                end

                if nearest then
                    print("‚û°Ô∏è TP sang PC g·∫ßn nh·∫•t ƒë·ªÉ hack ti·∫øp")
                    rootPart.CFrame = nearest.CFrame + Vector3.new(0,3,0)
                else
                    print("‚ö†Ô∏è Kh√¥ng c√≤n PC n√†o ch∆∞a done")
                end

                return -- k·∫øt th√∫c theo d√µi PC n√†y
            end
        end

        task.wait(0.1) -- theo d√µi 10 l·∫ßn m·ªói gi√¢y
    end
end)
    updateStatus("üíª Hack: " .. pcData.computer.Name)
    log("=== B·∫ÆT ƒê·∫¶U HACK: " .. pcData.computer.Name .. " ===")
task.spawn(function()
    while scriptEnabled and isHacking and currentPC == pcData do
        
        local progressValue = nil
        for _, c in ipairs(pcData.computer:GetDescendants()) do
            if (c.Name == "ActionProgress" or c.Name == "Value")
               and (c:IsA("IntValue") or c:IsA("NumberValue")) then
                progressValue = c
                break
            end
        end

        if progressValue then
            local v = progressValue.Value
            
            -- N·∫øu PC DONE ‚Üí skip ngay
            if v >= 1 then
                print("üî• PC DONE (Theo d√µi 0.1s ph√°t hi·ªán)")

                hackedPCs[pcData.id] = true
                isHacking = false

                rootPart.CFrame = CFrame.new(50,70,50)
                task.wait(5)

                local nearest = nil
                local nearestDist = math.huge

                for _, obj in ipairs(workspace:GetDescendants()) do
                    if obj:IsA("BasePart") and obj.Name:match("ComputerTrigger") then
                        local comp = obj.Parent
                        if comp then
                            local done = false

                            -- Check trong PC ƒë√≥
                            for _, c2 in ipairs(comp:GetDescendants()) do
                                if (c2.Name == "ActionProgress" or c2.Name == "Value")
                                  and (c2:IsA("IntValue") or c2:IsA("NumberValue")) then
                                    if c2.Value >= 1 then
                                        done = true
                                        break
                                    end
                                end
                            end

                            if not done then
                                local dist = (obj.Position - rootPart.Position).Magnitude
                                if dist < nearestDist then
                                    nearestDist = dist
                                    nearest = obj
                                end
                            end
                        end
                    end
                end

                if nearest then
                    print("‚û°Ô∏è TP sang PC g·∫ßn nh·∫•t ƒë·ªÉ hack ti·∫øp")
                    rootPart.CFrame = nearest.CFrame + Vector3.new(0,3,0)
                else
                    print("‚ö†Ô∏è Kh√¥ng c√≤n PC n√†o ch∆∞a done")
                end

                return -- k·∫øt th√∫c watcher
            end
        end

        task.wait(0.1)
    end
end)
    trackPCProgress(pcData)
    
    if isPCDone(pcData) then
        hackedPCs[pcData.id] = true
        isHacking = false
        currentPC = nil
        return
    end
    
    updateStatus("‚Üí TP ƒë·∫øn PC...")
    if not teleportToTrigger(pcData.trigger) then
        updateStatus("‚úó TP th·∫•t b·∫°i")
        log("‚úó Teleport th·∫•t b·∫°i!")
        isHacking = false
        currentPC = nil
        return
    end
    
    task.wait(waitBeforeHack)
    
    if isPCDone(pcData) then
        hackedPCs[pcData.id] = true
        isHacking = false
        currentPC = nil
        return
    end
    
    updateStatus("‚Üí K√≠ch ho·∫°t hack...")
    log("K√≠ch ho·∫°t hack...")
    activateHack(pcData)
    
    local maxHackTime = 60
    local hackStartTime = tick()
    local lastJumpTime = tick()
    
    while scriptEnabled and not isPCDone(pcData) and not skipCurrentPC and (tick() - hackStartTime < maxHackTime) do
        if isBeastNearby() then
            escapeBeast()
            break
        end
        
        if tick() - lastJumpTime >= hackDelay then
            humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
            task.wait(0.25)
            rootPart.CFrame = pcData.trigger.CFrame + Vector3.new(0, 3, 0)
            task.wait(0.2)
            activateHack(pcData)
            lastJumpTime = tick()
        end
        
        task.wait(0.4)
    end
    
    -------------------------------
    -- üî• FIX ANTI CHEAT ‚Äì CH·∫†Y 100%
    ----------------------------------
    if isPCDone(pcData) then
        hackedPCs[pcData.id] = true

        updateStatus("‚è≥ Bay l√™n tr·ªùi ch·ªù 5s...")
        log("‚è≥ TP 50,70,50 v√† ch·ªù 5s...")

        -- T·∫°o platform n·∫øu ch∆∞a c√≥
        if not hidePlatform then
            hidePlatform = Instance.new("Part")
            hidePlatform.Size = Vector3.new(20, 1, 20)
            hidePlatform.Anchored = true
            hidePlatform.CanCollide = true
            hidePlatform.Material = Enum.Material.SmoothPlastic
            hidePlatform.Color = Color3.fromRGB(0, 0, 0)
            hidePlatform.Name = "AntiCheatPlatform"
            hidePlatform.Position = Vector3.new(50, 69, 50)
            hidePlatform.Parent = workspace
        end

        -- Teleport l√™n v·ªã tr√≠ an to√†n
        rootPart.CFrame = CFrame.new(50, 70, 50)

        -- Ch·ªù ƒë√∫ng 5s
        task.wait(5)

        updateStatus("‚úì S·∫µn s√†ng PC ti·∫øp!")
        log("‚úì Ch·ªù 5s xong, ti·∫øp t·ª•c!")

    else
        updateStatus("‚è±Ô∏è Timeout")
        log("=== ‚è±Ô∏è TIMEOUT! ===")
        hackedPCs[pcData.id] = true
    end

    isHacking = false
    currentPC = nil
    task.wait(0.5)
end



-- H√†m ki·ªÉm tra GUI ƒë·ªÉ bi·∫øt c√≥ th·ªÉ ƒëi Exit kh√¥ng
local function canGoExit()
    local gui = player:FindFirstChild("PlayerGui")
    if not gui then return false end

    local screen = gui:FindFirstChild("ScreenGui")
    if not screen then return false end

    local info = screen:FindFirstChild("GameInfoFrame")
    if not info then return false end

    local statusBox = info:FindFirstChild("GameStatusBox")
    if not statusBox or not statusBox:IsA("TextLabel") then
        return false
    end

    local txt = statusBox.Text:upper()
    if txt:find("FIND AN EXIT") then
        return true
    end
    return false
end

-- Main loop
local function mainLoop()
    log("üöÄ AUTO HACK ƒêANG CH·∫†Y!")
    
    while true do
        if scriptEnabled then
            updateStatus("‚è≥ ƒê·ª£i game...")
            if not waitForGameActive() then
                task.wait(10)
            else
                hackedPCs = {}
                updateStatus("üÜï Game m·ªõi!")
                log("üÜï Game m·ªõi!")
                log("Hack Extra PC: " .. (hackExtraPC and "B·∫¨T" or "T·∫ÆT"))
                
                updateStatus("üîç T√¨m PC...")
                local allPCs = findAllPCTriggers()
                
                if #allPCs == 0 then
                    updateStatus("‚ö†Ô∏è Kh√¥ng c√≥ PC")
                    log("‚ö†Ô∏è Kh√¥ng t√¨m th·∫•y PC!")
                    task.wait(3)
                else
                    updateStatus("T√¨m th·∫•y " .. #allPCs .. " PC")
                    log("T√¨m th·∫•y " .. #allPCs .. " PC(s)")
                    
                    for _, pcData in ipairs(allPCs) do
                        if not scriptEnabled then break end
                        
                        if canGoExit() then
                            if hackExtraPC then
                                updateStatus("Find Exit! Extra PC B·∫¨T")
                                log("‚ö†Ô∏è Find Exit! Nh∆∞ng Extra PC B·∫¨T ‚Üí ti·∫øp t·ª•c")
                            else
                                updateStatus("Find Exit! D·ª´ng hack")
                                log("‚ö†Ô∏è Find Exit! D·ª´ng hack PC!")
                                break
                            end
                        end
                        
                        hackPC(pcData)
                    end
                    
                    updateStatus("‚úÖ Ho√†n t·∫•t hack PC!")
                    log("‚úÖ Ho√†n t·∫•t hack PC!")
                end
                
                if hackExtraPC then
                    updateStatus("‚è≥ ƒê·ª£i hack xong h·∫øt...")
                    log("Extra PC B·∫¨T ‚Üí ƒê·ª£i th√™m...")
                    task.wait(2)
                end
                
                updateStatus("‚è≥ ƒê·ª£i Find Exit...")
                log("ƒê·ª£i Find Exit...")
                local waitStart = tick()
                -- Sau hack PC xong, ch·ªù cho GUI b√°o Exit:
                repeat
                    task.wait(0.5)
                until canGoExit() or (tick() - waitStart > 30)

                log("üîç [DEBUG] Sau khi ch·ªù, isFindExitPhase = " .. tostring(isFindExitPhase()))
                
                if canGoExit() then
                    updateStatus("‚úì Find Exit!")
                    log("‚úì Ph√°t hi·ªán Find Exit!")
                    task.wait(1)
                    autoExit()
                else
                    updateStatus("‚ö†Ô∏è Kh√¥ng ph√°t hi·ªán Exit")
                    log("‚ö†Ô∏è Kh√¥ng ph√°t hi·ªán Find Exit")
                end
                
                updateStatus("üéâ Round ho√†n t·∫•t!")
                log("üéâ ROUND HO√ÄN T·∫§T!")
            end
        else
            updateStatus("üí§ Script T·∫ÆT")
            task.wait(2)
        end
    end
end

-- GUI
local function createGUI()
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "AutoHackGUI"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = player:WaitForChild("PlayerGui")
    
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 200, 0, 120) -- TƒÉng th√™m cho status
    frame.Position = UDim2.new(0.5, -100, 0, 20)
    frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    frame.BorderSizePixel = 2
    frame.BorderColor3 = Color3.fromRGB(255, 255, 255)
    frame.Parent = screenGui
    
    local uiCorner = Instance.new("UICorner")
    uiCorner.CornerRadius = UDim.new(0, 8)
    uiCorner.Parent = frame
    
    local title = Instance.new("TextLabel")
    title.Size = UDim2.new(1, 0, 0, 25)
    title.BackgroundTransparency = 1
    title.Text = "AUTO HACK PC"
    title.TextColor3 = Color3.fromRGB(255, 255, 255)
    title.TextSize = 14
    title.Font = Enum.Font.GothamBold
    title.Parent = frame
    
    local toggleButton = Instance.new("TextButton")
    toggleButton.Size = UDim2.new(0, 160, 0, 35)
    toggleButton.Position = UDim2.new(0.5, -80, 0, 30)
    toggleButton.BackgroundColor3 = Color3.fromRGB(220, 50, 50)
    toggleButton.Text = "T·∫ÆT"
    toggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggleButton.TextSize = 16
    toggleButton.Font = Enum.Font.GothamBold
    toggleButton.Parent = frame
    
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 6)
    btnCorner.Parent = toggleButton
    
    -- Status Label (M·ªöI)
    local status = Instance.new("TextLabel")
    status.Size = UDim2.new(1, -10, 0, 18)
    status.Position = UDim2.new(0, 5, 0, 70)
    status.BackgroundTransparency = 1
    status.Text = "Status: Ch·ªù b·∫≠t..."
    status.TextColor3 = Color3.fromRGB(150, 220, 150)
    status.TextSize = 10
    status.Font = Enum.Font.Gotham
    status.TextXAlignment = Enum.TextXAlignment.Left
    status.TextYAlignment = Enum.TextYAlignment.Top
    status.TextWrapped = true
    status.Parent = frame
    
    statusLabel = status -- L∆∞u reference
    
    local checkboxFrame = Instance.new("Frame")
    checkboxFrame.Size = UDim2.new(0, 160, 0, 20)
    checkboxFrame.Position = UDim2.new(0.5, -80, 0, 95)
    checkboxFrame.BackgroundTransparency = 1
    checkboxFrame.Parent = frame
    
    local checkbox = Instance.new("Frame")
    checkbox.Size = UDim2.new(0, 16, 0, 16)
    checkbox.Position = UDim2.new(0, 0, 0.5, -8)
    checkbox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    checkbox.BorderSizePixel = 1
    checkbox.BorderColor3 = Color3.fromRGB(120, 120, 120)
    checkbox.Parent = checkboxFrame
    
    local checkCorner = Instance.new("UICorner")
    checkCorner.CornerRadius = UDim.new(0, 3)
    checkCorner.Parent = checkbox
    
    local checkmark = Instance.new("TextLabel")
    checkmark.Size = UDim2.new(1, 0, 1, 0)
    checkmark.BackgroundTransparency = 1
    checkmark.Text = "‚úì"
    checkmark.TextColor3 = Color3.fromRGB(255, 80, 80)
    checkmark.TextSize = 14
    checkmark.Font = Enum.Font.GothamBold
    checkmark.Visible = false
    checkmark.Parent = checkbox
    
    local checkLabel = Instance.new("TextLabel")
    checkLabel.Size = UDim2.new(1, -20, 1, 0)
    checkLabel.Position = UDim2.new(0, 22, 0, 0)
    checkLabel.BackgroundTransparency = 1
    checkLabel.Text = "Hack Extra PC"
    checkLabel.TextColor3 = Color3.fromRGB(180, 180, 180)
    checkLabel.TextSize = 11
    checkLabel.Font = Enum.Font.Gotham
    checkLabel.TextXAlignment = Enum.TextXAlignment.Left
    checkLabel.Parent = checkboxFrame
    
    local checkButton = Instance.new("TextButton")
    checkButton.Size = UDim2.new(1, 0, 1, 0)
    checkButton.BackgroundTransparency = 1
    checkButton.Text = ""
    checkButton.Parent = checkboxFrame
    
    toggleButton.MouseButton1Click:Connect(function()
        scriptEnabled = not scriptEnabled
        
        if scriptEnabled then
            toggleButton.BackgroundColor3 = Color3.fromRGB(50, 220, 50)
            toggleButton.Text = "B·∫¨T"
            log("‚úì AUTO HACK: B·∫¨T")
        else
            toggleButton.BackgroundColor3 = Color3.fromRGB(220, 50, 50)
            toggleButton.Text = "T·∫ÆT"
            log("‚úó AUTO HACK: T·∫ÆT")
        end
    end)
    
    checkButton.MouseButton1Click:Connect(function()
        hackExtraPC = not hackExtraPC
        
        if hackExtraPC then
            checkmark.Visible = true
            checkbox.BackgroundColor3 = Color3.fromRGB(80, 40, 40)
            checkbox.BorderColor3 = Color3.fromRGB(255, 80, 80)
            checkLabel.TextColor3 = Color3.fromRGB(255, 120, 120)
            log("‚úì HACK EXTRA PC: B·∫¨T")
        else
            checkmark.Visible = false
            checkbox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            checkbox.BorderColor3 = Color3.fromRGB(120, 120, 120)
            checkLabel.TextColor3 = Color3.fromRGB(180, 180, 180)
            log("‚úó HACK EXTRA PC: T·∫ÆT")
        end
    end)
    
    -- Draggable
    local UIS = game:GetService("UserInputService")
    local dragging = false
    local dragStart
    local startPos

    frame.InputBegan:Connect(function(input)   
        if input.UserInputType == Enum.UserInputType.MouseButton1 
        or input.UserInputType == Enum.UserInputType.Touch then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
        end
    end)

    frame.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1
        or input.UserInputType == Enum.UserInputType.Touch then
            dragging = false
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement 
            or input.UserInputType == Enum.UserInputType.Touch) then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(
                startPos.X.Scale,
                startPos.X.Offset + delta.X,
                startPos.Y.Scale,
                startPos.Y.Offset + delta.Y
            )
        end
    end)
    
    log("‚úì GUI created!")
end

