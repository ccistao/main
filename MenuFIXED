task.spawn(function()
    task.wait(0.5)
    
    SelfMuting.start()
    activeStates[3] = true
    Button3.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
    
	startBeastTracker()
    activeStates[4] = true
    Button4.BackgroundColor3 = Color3.fromRGB(0, 170, 0)

	SurvivorTracker.start()
